<dataConfig>
  <dataSource type="JdbcDataSource" 
              driver="com.mysql.jdbc.Driver"
              url="jdbc:mysql://127.0.0.1:3306/solr_tutorial" 
              user="root" 
              password="password"/>
  <document>
    <entity name="person" pk="id" 
      query="select id,firstname,lastname,description,created_time, updated_time from person" 
      deltaImportQuery="select id,firstname,lastname,description,created_time, updated_time from person where id = '${dih.delta.id}'" 
      deltaQuery="select id from person where CONVERT_TZ(updated_time,'America/New_York','GMT') > '${dih.last_index_time}' ">
      >
    </entity>
  </document>
</dataConfig>